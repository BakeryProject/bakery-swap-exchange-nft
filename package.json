    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.2",
    "bignumber.js": "^9.0.1",
    "bluebird": "^3.7.2",
    "chai": "^4.3.4",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.5",
    "hardhat-docgen": "^1.1.1",
